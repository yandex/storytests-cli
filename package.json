{
    "name": "storytests-cli",
    "version": "1.5.0",
    "description": "CLI utility to generate tests from Storybook stories",
    "main": "dist/index.js",
    "repository": "https://github.com/yandex/storytests-cli",
    "author": "Alexey Yakovlev <alexeyyakovlev0359@gmail.com>",
    "license": "MPL-2.0",
    "private": false,
    "files": [
        "dist/**",
        "bin/cli.js",
        "README.md",
        "LICENSE"
    ],
    "keywords": [
        "storybook",
        "tests"
    ],
    "bin": {
        "storytests": "bin/cli.js"
    },
    "scripts": {
        "build": "yarn clean && yarn tsc",
        "prepublishOnly": "yarn build",
        "clean": "rm -rf build",
        "lint": "npm-run-all lint:*",
        "lint:scripts": "eslint './**/*.{js,ts,tsx}'",
        "lint:types": "tsc --noEmit",
        "test": "jest",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "dependencies": {
        "cosmiconfig": "^7.0.0",
        "glob": "^7.1.6",
        "node-fetch": "^2.6.1",
        "yargs": "^16.2.0"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/jest": "^26.0.22",
        "@types/node-fetch": "^2.5.12",
        "@types/yargs": "^16.0.1",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.24.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.6.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.4",
        "typescript": "^4.2.4"
    }
}
